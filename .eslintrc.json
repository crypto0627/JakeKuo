{
  "env": {
    "jest": true
  },
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/recommended"
  ],
  "plugins": ["prettier", "@typescript-eslint", "jest"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "none",
        "semi": false,
        "useTabs": false,
        "tabWidth": 2,
        "bracketSpacing": true,
        "bracketSameLine": false,
        "arrowParens": "always"
      }
    ],
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off"
  }
}
