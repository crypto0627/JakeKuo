{
  "extends": ["prettier", "plugin:@typescript-eslint/recommended"],
  "plugins": ["prettier", "@typescript-eslint"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "none",
        "semi": false,
        "useTabs": false,
        "tabWidth": 2,
        "bracketSpacing": true,
        "bracketSameLine": false,
        "arrowParens": "always"
      }
    ],
    "prefer-arrow-callback": "off",
    "@typescript-eslint/no-unused-vars": "error"
  }
}
